                        text="Search">
                    <HBox.margin>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                    </HBox.margin>
                </Button>
                <TextField fx:id="searchField" minWidth="-Infinity" prefWidth="180.0">
                    <HBox.margin>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                    </HBox.margin>
                </TextField>
            </HBox>
            <TableView fx:id="addPartTable" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1">
                <placeholder>
                    <Label text="No parts available"/>
                </placeholder>
                <columns>
                    <TableColumn fx:id="addPartIDColumn" maxWidth="70.0" minWidth="70.0" prefWidth="70.0"
                                 text="Part ID"/>
                    <TableColumn fx:id="addPartNameColumn" maxWidth="160.0" minWidth="160.0" prefWidth="160.0"
