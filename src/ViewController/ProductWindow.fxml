                    <TableColumn fx:id="addPartQTYColumn" maxWidth="100.0" minWidth="100.0" prefWidth="100.0"
                                 text="Inventory Level"/>
                    <TableColumn fx:id="addPartPriceColumn" maxWidth="100.0" minWidth="100.0" prefWidth="100.0"
                                 text="Price per Unit"/>
                </columns>
            </TableView>
            <Button fx:id="addButton" mnemonicParsing="false" onAction="#executeAdd" text="Add"
                    GridPane.halignment="RIGHT" GridPane.rowIndex="2" GridPane.valignment="TOP">
                <GridPane.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </GridPane.margin>
            </Button>
            <TableView fx:id="delPartTable" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="3">
                <placeholder>
                    <Label text="No parts associated with product"/>
                </placeholder>
                <columns>
                    <TableColumn fx:id="delPartIDColumn" maxWidth="70.0" minWidth="70.0" prefWidth="70.0"
                                 text="Part ID"/>
                    <TableColumn fx:id="delPartNameColumn" maxWidth="160.0" minWidth="160.0" prefWidth="160.0"
                                 text="Part Name"/>
                    <TableColumn fx:id="delPartQTYColumn" maxWidth="100.0" minWidth="100.0" prefWidth="100.0"
                                 text="Inventory Level"/>
                    <TableColumn fx:id="delPartPriceColumn" maxWidth="100.0" minWidth="100.0" prefWidth="100.0"
                                 text="Price per Unit"/>
                </columns>
            </TableView>
            <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#executeRemoveAssociatedPart" text="Remove Associated Part"
                    GridPane.halignment="RIGHT" GridPane.rowIndex="4" GridPane.valignment="TOP">
                <GridPane.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </GridPane.margin>
            </Button>
            <ButtonBar prefHeight="40.0" prefWidth="200.0" GridPane.rowIndex="5">
                <buttons>
                    <Button mnemonicParsing="false" onAction="#executeSave" text="Save"/>
                    <Button cancelButton="true" mnemonicParsing="false" onAction="#executeCancel" text="Cancel"/>
                </buttons>
            </ButtonBar>
